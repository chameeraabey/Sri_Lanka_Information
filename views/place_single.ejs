<!DOCTYPE html>
<html lang="en">
  <head>
  	<% include partials/head.ejs %>
    <style type="text/css">
      iframe {
        width: 640px;
        height: 360px;
      }
    </style>
  </head>
  <body>

      <% include partials/header.ejs %>

      <div id="hero-image-single" style="background-image: url('/images/<%=place.hero_image%>')">
        <h1 id="hero-title"><%=title%></h1>
      </div>

      <div class="content-padding clearfix">
        <div class="poster-wrapper">
          <img src="/images/<%= place.poster%>" class="img-responsive">
        </div>

        <div class="description-wrapper">

          <div class="description">
            <h2 class="movie-header">Description</h2>
              <p><%= place.description%></p>
          </div>

          <div class="main-characters">
            <h2 class="movie-header">Video</h2>         
          </div>
          <div class="poster-wrapper">
              <%-video %>
          </div>
        </div>
      </div>      
      <% include partials/footer.ejs %>
    	<% include partials/scripts.ejs %>
  </body>
</html>